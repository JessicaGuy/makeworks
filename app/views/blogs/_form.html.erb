<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-actions my-3">
    <%= f.button :submit %>
  </div>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :sub_title %>
    <%= f.input :blurb %>
    <%= f.association :blog_category, input_html: { 'data-controller': 'select2' } %>
    <%= f.rich_text_area :content_action %>
    <%= f.input :dont_publish %>
    <%= f.input :featured_video %>
    <%= f.input :header_image %>
    <%# f.association :medium, input_html: { 'data-controller': 'select2' } %>
    <%= f.input :slug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
