<div class="container border border-dark my-5">

  <div class="row border-bottom border-dark">
    <div class="col-md-4 tile-first">
      <strong>
        Higher quality Medium:
        <%= link_to 'Medium', medium_url(@blog.medium_id) %>
      </strong>

      <div class="my-4">
        <h4>
        <%= link_to "Blog", '/blog' %> /
        <%= @blog.blog_category.name %>
        <br>
        (slug:<%= @blog.slug %>)
        </h4>
        <small> <%= @blog.created_at&.strftime("%B %d, %Y") %> </small>
      </div>
    </div>

    <div class="col-md-8 text-center p-5">
      <h1> <%= @blog.title %> </h1>
      <p> <%= @blog.sub_title %> </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 tile-first">
      <%= image_tag @blog.header_image, class: 'img-fluid' %>
    </div>
    <div class="col-md-8 p-5">
      <%= @blog.content.html_safe %>
    </div>
  </div>
</div>
