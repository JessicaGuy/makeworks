<% if @blog.medium %>
  Higher quality Medium:
  <%= link_to 'Medium', medium_url(@blog.medium_id) %>
<% end %>

<h4>
  <%= link_to "Blog", '/blog' %> /
  <% if @blog.blog_category %>
    <%= link_to @blog.blog_category.name, blogs_url(category: @blog.blog_category) %>
  <% end %>
</h4>

<%= title @blog.title %>
<p> <%= @blog.sub_title %> </p>


<small> <%= @blog.created_at&.strftime("%B %d, %Y") %> </small>
<% if current_user&.is_admin? %>
  <br>
  <%= link_to 'Edit', edit_blog_url, class: 'btn btn-primary mt-4' %>
<% end %>


<div class="my-5 text-center">
  <%= image_tag @blog.header_image, class: 'img-fluid' %>
</div>


<%= @blog.content_action %>
