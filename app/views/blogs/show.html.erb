<% if admin? && @blog.medium %>
  Higher quality Medium:
  <%= link_to 'Medium', medium_url(@blog.medium_id) %>
<% end %>

<h4>
  <%= link_to "Blog", '/blog' %> /
  <% if @blog.blog_category %>
    <%= link_to @blog.blog_category.name, blogs_url('q[blog_category_id_eq]': @blog.blog_category) %>
  <% end %>
</h4>

<%= title @blog.title %>
<p> <%= @blog.sub_title %> </p>


<small> <%= @blog.created_at&.strftime("%B %d, %Y") %> </small>
<% if current_user&.is_admin? %>
  <br>
  <%= link_to 'Edit', edit_blog_url, class: 'btn btn-primary mt-4' %>
<% end %>


<div class="my-2 text-center">
  <%= image_tag @blog.header_image, class: 'img-fluid' %>
</div>


<%= @blog.content_action %>

<%= link_to blogs_url do %>
  <svg width="3em" height="3em" viewBox="0 0 16 16" class="mt-4 bi bi-arrow-left-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
    <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
  </svg>
<% end %>
