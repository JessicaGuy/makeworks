<div class="container my-5">

  <strong>Featured video:</strong>
  <%= @blog.featured_video %>

  <strong>Medium:</strong>
  <%= @blog.medium_id %>

  <strong>Slug:</strong>
  <%= @blog.slug %>

  <div class="my-4">
    <%= link_to "Blog /", '/blog' %>
    <%= @blog.blog_category.name %>
    <h1> <%= @blog.title %> </h1>
    <p> <%= @blog.sub_title %> </p>
    <%= image_tag @blog.header_image %>

    <%= @blog.content.html_safe %>
  </div>

</div>
