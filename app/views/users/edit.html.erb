<%= title 'Editing User' %>

<%= render 'user_tabs' %>

<div class="my-5 row">
  <div class="col-lg-8">
    <%= render 'form', user: @user %>
  </div>

  <div class="mt-5">
    <%= link_to t("devise.registrations.edit.cancel_my_account"),
      registration_path(current_user),
      method: :delete,
      data: { confirm: "You sure?" },
      class: 'btn btn-danger mb-5' %>
  </div>
</div>
