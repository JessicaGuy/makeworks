<div class="mw-border-50 my-5 p-5">
  <div class="justify-content-between d-flex">
    <div class="">
      <% if @user == current_user %>
        <%= link_to "Edit", edit_profile_url(current_user), class: 'btn btn-primary mb-3' %>
      <% end %>
      <%= title @user %>

      <p>
      <strong>First name:</strong>
      <%= @user.first_name %>
      </p>

      <p>
      <strong>Last name:</strong>
      <%= @user.last_name %>
      </p>

      <% if current_user == @user %>
        <p>
        <strong>Email:</strong>
        <%= @user.email %>
        </p>

        <p>
        <strong>Language:</strong>
        <%= @user.locale %>
        </p>

        <p>
        <strong>Time zone:</strong>
        <%= @user.time_zone %>
        </p>
      <% end %>

      <p>
      <strong>Biography:</strong>
      <%= @user.bio %>
      </p>

    </div>
    <div class="">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, style: 'max-height:200px;' %>
      <% end %>
    </div>
  </div>

  <hr>

  <div>
    <h4>Favorite Companies</h4>
    <% @user.favorite_companies.where(is_favorite: true).each do |c| %>
      <%= link_to c.company&.name, c.company %>
      <small>
      <%= c.note %>
      </small>
      <br>
    <% end %>
  </div>

  <hr>
  <%= render 'user_regions' %>

  <%= render 'user_companies' %>
</div>
