<div class="container bg-light border my-5 p-5">
  <p>
  <strong>Email:</strong>
  <%= @user.email %>
  </p>

  <p>
  <strong>First name:</strong>
  <%= @user.first_name %>
  </p>

  <p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
  </p>

  <hr>
  <h4>Is in regions:</h4>

  <% @user.regions.each do |region| %>
    <%= link_to  region, class: 'm-1 btn btn-primary' do %>
      <%= region.name %>
      <% if @user.is_champion_in_region(region.id) %>
        (Champion)
      <% end %>
    <% end %>
  <% end %>
</div>
