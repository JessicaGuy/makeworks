<h1>Users</h1>

<% if current_user.is_admin? %>
  <%= link_to "Invite user", new_user_invitation_url, class:"btn btn-primary" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.slug %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
