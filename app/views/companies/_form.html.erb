<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-actions my-2">
    <%= f.button :submit %>
  </div>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :trimmed_name %>
    <%= f.input :title %>
    <%= f.association :region %>
    <%= f.association :machines_taxonomies %>
    <%= f.input :address %>
    <%= f.input :background %>
    <%= f.input :description %>
    <%= f.input :intro %>
    <%= f.input :lat %>
    <%= f.input :lng %>
    <%= f.input :location %>
    <%= f.input :large_run %>
    <%= f.input :medium_run %>
    <%= f.input :minimum_order %>
    <%= f.input :number_of_staff %>
    <%= f.input :file_types %>
    <%= f.input :sample_production %>
    <%= f.input :short_run %>
    <%= f.input :soft_delete %>
    <%= f.input :turnaround_time %>
    <%= f.input :website %>
    <%= f.input :year_founded %>
    <%= f.input :film_ready %>

    <hr>
    <h3>Contact info</h3>
    <%= f.input :contact_name %>
    <%= f.input :contact_email %>
    <%= f.input :contact_phone %>
    <%= f.input :contact_jobtitle %>

    <hr>
    <h3>Photos</h3>
    <%= f.input :image_bucket %>
    <%= f.input :portrait %>
    <%= f.input :photo1 %>
    <%= f.input :photo2 %>
    <%= f.input :photo3 %>
    <%= f.input :photo4 %>
    <%= f.input :photo5 %>
    <%= f.input :photo6 %>
    <%= f.input :photo7 %>
    <%= f.input :photo8 %>
    <%= f.input :photo9 %>
    <%= f.input :top_image %>
    <%= f.input :video_link %>

    <hr>
    <h3>Social</h3>
    <%= f.input :facebook %>
    <%= f.input :flickr %>
    <%= f.input :instagram %>
    <%= f.input :linkedin %>
    <%= f.input :pinterest %>
    <%= f.input :twitter %>
    <%= f.input :youtube %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
