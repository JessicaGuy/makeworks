<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-actions my-2">
    <%= f.button :submit %>
  </div>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :trimmed_name %>
    <%# f.input :title %>
    <%= f.association :region %>

    <%= f.input :address %>
    <%= f.input :background %>
    <%= f.input :description %>
    <%= f.input :intro %>
    <%= f.input :lat %>
    <%= f.input :lng %>
    <%= f.input :location %>
    <%= f.input :number_of_staff %>
    <%= f.input :website %>
    <%= f.input :year_founded %>

    <% if current_user.is_admin? %>
      <hr>
      <h4>Admin only</h4>
      <%= f.input :been_visited %>
      <%= f.input :film_ready %>
      <%= f.input :soft_delete %>
    <% end %>

    <hr>
    <h4>Tags</h4>
    <%= f.association :machines_taxonomies %>
    <%= f.association :materials_taxonomies %>
    <%= f.association :industry_taxonomies %>
    <%= f.association :process_taxonomies %>
    <%= f.association :finished_products_taxonomies %>
    <%= f.association :manufacturer_taxonomies %>

    <hr>
    <h4>Info</h4>
    <%= f.input :turnaround_time %>
    <%= f.input :minimum_order %>
    <%= f.input :production_access %>
    <%= f.input :file_types %>

    <hr>
    <h4>Capacity</h4>
    <%= f.input :bespoke_one_offs %>
    <%= f.input :sample_production %>
    <%= f.input :batch_production %>
    <%= f.input :short_run %>
    <%= f.input :medium_run %>
    <%= f.input :large_run %>


    <hr>
    <h4>Works with</h4>
    <%= f.input :works_with_general_public %>
    <%= f.input :works_with_large_business %>
    <%= f.input :works_with_professionals %>
    <%= f.input :works_with_small_companies %>
    <%= f.input :works_with_students %>

    <hr>
    <h3>Contact info</h3>
    <%= f.input :contact_name %>
    <%= f.input :contact_email %>
    <%= f.input :contact_phone %>
    <%= f.input :contact_jobtitle %>

    <hr>
    <h3>Photos</h3>
    <%# f.input :image_bucket %>
    <%= f.input :top_image %>
    <%= f.input :portrait %>
    <%= f.input :video_link %>
    <h4>Slider images (carousel)</h4>
    <%= f.input :photo1 %>
    <%= f.input :photo2 %>
    <%= f.input :photo3 %>
    <%= f.input :photo4 %>
    <%= f.input :photo5 %>
    <%= f.input :photo6 %>
    <%= f.input :photo7 %>
    <%= f.input :photo8 %>
    <%= f.input :photo9 %>

    <hr>
    <h3>Social</h3>
    <%= f.input :facebook %>
    <%= f.input :flickr %>
    <%= f.input :instagram %>
    <%= f.input :linkedin %>
    <%= f.input :pinterest %>
    <%= f.input :twitter %>
    <%= f.input :youtube %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
