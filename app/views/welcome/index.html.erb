<% content_for(:title, t('shared.tagline')) %>
<div class="container my-5">

  <div>
    <div class="text-center mb-5">
      <h1 class="display-3 font-weight-bold">MAKE WORKS</h1>
      <h4><%= t('shared.a_global_library') %></h4>
    </div>

    <div class="text-center my-4">
      <div class="dropdown">
        <a class="btn btn-primary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Regions list
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <% @all_regions.each do |region| %>
            <%= link_to region.name, region, class: 'dropdown-item' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="my-3 text-center">
    <%= link_to "Processes", process_taxonomies_url, class: 'btn btn-yellow mr-2' %>
    <%= link_to "Materials", materials_taxonomies_url, class: 'btn btn-yellow mr-2' %>
    <%= link_to "Industries", industry_taxonomies_url, class: 'btn btn-yellow mr-2' %>
  </div>

  <%= render 'one_blog' %>

  <div class="row">
    <%= render partial: 'region_map', locals: { locations: Region.with_lat_lng} %>
  </div>

</div>
