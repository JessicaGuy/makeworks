<div class="container my-5">

<p>
  <strong>M:</strong>
  <%= @region.m_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @region.name %>
</p>

<p>
  <strong>Can signup:</strong>
  <%= @region.can_signup %>
</p>

<p>
  <strong>Is public:</strong>
  <%= @region.is_public %>
</p>

<p>
  <strong>Logo:</strong>
  <%= @region.logo %>
</p>

<p>
  <strong>Trimmed name:</strong>
  <%= @region.trimmed_name %>
</p>

<%= link_to 'Edit', edit_region_path(@region) %> |
<%= link_to 'Back', regions_path %>

<hr>

<div class="row">
  <div class="col-lg-6">
    <h4> Companies in region: <%= @region.companies.count %> </h4>

    <% @region.companies.each do |c| %>
      <%= link_to c.name, c, class: '' %><br/>
    <% end %>
  </div>

  <div class="col-lg-6">
    <h4>Users in region <%= @region.users.count %></h4>
    <% @region.users.order(:created_at).each do |user| %>
      <%= link_to user.name, user, class: '' %>
      <%= user.email %> -
      Admin:<%= user.is_admin? %> -
      Champion:<%= user.is_champion_in_region(Region.friendly.find(params[:id])) %>
      <br>
    <% end %>
  </div>
</div>
</div>
